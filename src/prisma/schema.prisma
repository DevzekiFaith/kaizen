datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  totalCoins Int     @default(2)
  usedCoins  Int     @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
